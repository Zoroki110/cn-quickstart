module TestCreate where

import qualified Token.Token as T
import Daml.Script

setup : Script ()
setup = script do
  issuerUSDC <- allocateParty "IssuerUSDC"
  alice <- allocateParty "Alice"
  
  -- Create token for Alice
  token <- submit issuerUSDC do
    createCmd T.Token with
      issuer = issuerUSDC
      owner = alice
      symbol = "USDC"
      amount = 1000.0
  
  pure ()